<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/root"
    tools:context="com.example.wolfknight.alphabet.select_Child">

    <ImageView
        android:id="@+id/appIcon"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="116dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_disabled"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_Name"
        android:text="@string/app_name"
        android:layout_alignBottom="@+id/appIcon"
        android:layout_toEndOf="@+id/appIcon" />

    <ListView
        android:id="@+id/userList"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appIcon"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"></ListView>

</RelativeLayout>
