<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wolfknight.alphabet.kiddlePrac">

    <ImageView
        android:id="@+id/kiddle_fillup"
        android:src="@drawable/infant_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/infant_alphabet"
        android:src="@drawable/infant_jz_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/kiddleMulDiv"
        android:src="@drawable/infant_shapes_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/kiddle_fillup"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/infant_smallWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/infant_smallwords_10"
        android:layout_below="@+id/kiddleMulDiv"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/infant_ordering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/infant_ordering_13"

        android:layout_below="@+id/kiddleMulDiv"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
