<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.alphabetpractice">

    <ImageView
        android:id="@+id/prac_body_parts"
        android:src="@drawable/body_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prac_familyFragButton"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/mustWordsPrac"
        android:src="@drawable/must_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        />

    <ImageView
        android:id="@+id/thingsToEat"
        android:src="@drawable/rhymes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prac_body_parts"

        />

    <ImageView
        android:id="@+id/prac_familyFragButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/family"
        />

    <ImageView
        android:id="@+id/prac_manner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/manner"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/prac_body_parts"

        />


</RelativeLayout>
