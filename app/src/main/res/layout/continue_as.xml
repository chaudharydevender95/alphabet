<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrod">

    <ImageView
        android:layout_width="296dp"
        android:layout_height="89dp"
        android:src="@drawable/alphabet_text"

        android:id="@+id/imageView8"
        android:layout_above="@+id/currentUserImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp" />

    <ImageView
        android:layout_width="115dp"
        android:layout_height="92dp"
        android:src="@drawable/logo"
        android:id="@+id/imageView7"

        android:layout_marginBottom="59dp"
        android:layout_above="@+id/imageView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue as"
        android:textStyle="italic|bold"
        android:textSize="@dimen/secondDimen"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView7"
        android:layout_marginTop="305dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:src="@drawable/profile"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:id="@+id/currentUserImage"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/switch_child" />

    <TextView
        android:id="@+id/add_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_child"
        android:textSize="@dimen/secondDimen"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/currentUserImage"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:id="@+id/switch_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:text="switch"
        android:layout_below="@+id/add_child"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />
</RelativeLayout>