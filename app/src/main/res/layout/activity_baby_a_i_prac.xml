<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:background="@drawable/draw_back"
    tools:context="com.example.wolfknight.alphabet.baby_a_i_prac">

    <Button
        android:layout_width="67dp"
        android:id="@+id/nextButton"
        android:layout_height="67dp"
        android:background="@drawable/next_img"
        android:layout_marginEnd="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/alphabetImage"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="122dp" />
    <Button
        android:id="@+id/clearButton"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:background="@drawable/reload_pic"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp" />
    
    <com.example.wolfknight.alphabet.CanvasView
        android:id="@+id/canvasView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?android:attr/progressBarStyleLarge"
            android:layout_gravity="center"
            android:layout_margin="100dp"
            android:indeterminateDrawable="@drawable/circular"
            android:max="100"
            android:progress="100" />
    </LinearLayout>


</RelativeLayout>
